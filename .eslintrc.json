{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "import/extensions": [
            "error",
            "always",
            {
                "ignorePackages": true
            }
        ],
        "import/prefer-default-export": "off",
        "function-paren-newline": [
            "error",
            "multiline"
        ],
        "object-curly-newline": [
            "error",
            {
                "ObjectPattern": {
                    "multiline": true
                }
            }
        ],
        "no-plusplus": "off",
        "no-console": [
            1,
            {
                "allow": [
                    "error"
                ]
            }
        ]
    }
}
